#/bin/bash

archs=( amd64 armel hppa i386 ia64 lpia powerpc sparc )

for arch in ${archs[@]}
do
	cat $1.add | while read LINE ; do
		echo "$LINE" >> ../$1-$arch
	done

    cat $1.remove | while read LINE ; do
        command="s/^$LINE$//"
	sed -i $command ../$1-$arch
    done

	newFile=`cat ../$1-$arch | grep -v "^$" | sort | uniq`
	echo "$newFile" > ../$1-$arch
done
